@model List<Assignment>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>to my page Assignment – Query with Dapper</p>
 
    <div>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <h4>Select assignment</h4>
                    <select id="select_category">
                        @foreach (var item in @Model)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="col-sm">
                    <h4>Description</h4>
                    <div class="description"></div>
                </div>

                <div class="col-sm">
                    <h4>Optional input</h4>
                    <div id="input_user"></div>

                    <button class="btn btn-primary" id="submit">Submit new query</button>
                </div>
            </div>

            <div class="border">
                <table class="content table"></table>
            </div>
        </div>

    </div>
    @section scripts {
        <script src="~/js/home.js" asp-append-version="true"></script>
    }
</div>


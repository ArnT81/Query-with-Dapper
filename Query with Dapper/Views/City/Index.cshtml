@model List<City>

@{
    ViewData["Title"] = "Cities Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <table class="table">
        <tr> <th>Name</th> </tr>
        @foreach (City city in @Model)
        {
            @* WRONG JS way to do it *@
            <tr class='clickable-row' data-href='Details/@city.Id'>
                <td>@city.Name</td>
                @* CORRECT C# way to do it *@
                <td> @Html.ActionLink("Details", "Details", new { id=city.Id }) </td>
            </tr>
        }
    </table>
</div>